{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "noEmitOnError": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["dist", "node_modules", "test/types"]
}
